// tasks.json defines quick commands that can be launched in Visual Studio Code
// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "options": {
        "env": {
            "DEBUG_SHIM_HOST": "app-python-shipdetector-phi-3-onnx",
            "APP_WORKING_DIR": "/workspace/app-python-shipdetector-phi-3-onnx"
        }
    },
    "tasks": [
        {
            "label": "deploy-debugshim-client",
            "isBackground": false,
            "command": "/bin/bash",
            "type": "shell",
            "dependsOn": [
                "copy_model_to_inbox",
                "copy_app_config_inbox",
                "copy_model_to_debug_image",
                "copy_phi3_to_inbox",
                "copy_phi3_app_config_inbox"
            ],
            "dependsOrder": "parallel",
            "args": [
                "/spacefx-dev/debugShim-deploy.sh",
                "--debug_shim",
                "${DEBUG_SHIM_HOST}",
                "--python_file",
                "${workspaceFolder}/src/app/main.py",
                "--port",
                "5678"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "copy_model_to_inbox",
            "isBackground": false,
            "command": "cp",
            "type": "shell",
            "args": [
                "${APP_WORKING_DIR}/model/*",
                "/var/spacedev/xfer/app-python-shipdetector-phi-3-onnx/inbox/"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "copy_phi3_to_inbox",
            "isBackground": false,
            "command": "cp",
            "type": "shell",
            "args": [
                "-r",
                "${APP_WORKING_DIR}/phi-3-vision-128k-instruct-onnx-cpu/cpu-int4-rtn-block-32-acc-level-4/",
                "/var/spacedev/xfer/app-python-shipdetector-phi-3-onnx/inbox/"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "copy_model_to_debug_image",
            "isBackground": false,
            "command": "cp",
            "type": "shell",
            "args": [
                "${APP_WORKING_DIR}/model/*",
                "${APP_WORKING_DIR}/schedules/debug_image/"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "copy_app_config_inbox",
            "isBackground": false,
            "command": "cp",
            "type": "shell",
            "args": [
                "${APP_WORKING_DIR}/schedules/debug_image/shipdetector-app-config.json",
                "/var/spacedev/xfer/app-python-shipdetector-phi-3-onnx/inbox/shipdetector-app-config.json"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "copy_phi3_app_config_inbox",
            "isBackground": false,
            "command": "cp",
            "type": "shell",
            "args": [
                "${APP_WORKING_DIR}/schedules/debug_image/phi-3-vision-app-config.json",
                "/var/spacedev/xfer/app-python-shipdetector-phi-3-onnx/inbox/phi-3-vision-app-config.json"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "reset-debugshim-client",
            "isBackground": true,
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "/spacefx-dev/debugShim-reset.sh",
                "--debug_shim",
                "${DEBUG_SHIM_HOST}",
                "--skip-pod-wait"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        }
    ]
}